generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Watchlist {
  id        String @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  terms     Term[]
  events    Event[]
}

model Term {
  id        String @id @default(uuid())
  value     String
  watchlistId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  watchlist Watchlist @relation(fields: [watchlistId], references: [id])
}

model Event {
  id        String @id @default(uuid())
  rawText   String
  createdAt DateTime @default(now())

  summary String
  severity String
  suggestions String

  // Relaciones
  watchlistId String
  watchlist Watchlist @relation(fields: [watchlistId], references: [id])
}